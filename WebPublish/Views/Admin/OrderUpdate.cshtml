@model BusinessLayer.Model.OrderStatusInfo
@{
    ViewBag.Title = "Order Update";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg overlay">
    <h3>Order Update</h3>
</div>

<div class="about_area">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-md-6">
                <h2>Update</h2>

                @using (Html.BeginForm("EditOrder", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Food Item</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.OrderId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                            <div class="form-group">
                            @Html.LabelFor(model => model.OrderStatus, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.DropDownList("OrderStatusId", new List<SelectListItem>
                           {
                               new SelectListItem { Text = "New", Value = "1" },
                               new SelectListItem { Text = "In Progress", Value = "2" },
                               new SelectListItem { Text = "Complete", Value = "3" },
                               new SelectListItem { Text = "Canceled", Value = "4" },
                           }, "Select Order Status")
                                @Html.ValidationMessageFor(model => model.OrderStatus, "", new { @class = "text-danger" })
                            </div>
                        </div>

                         <div class="form-group">
                            @Html.LabelFor(model => model.OrderDateTime, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.OrderDateTime, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.OrderDateTime, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-10">
                                <input type="submit" value="Update" class="btn btn-default" />
                            </div>

                        </div>
                    </div>
                }

            <div>

                @Html.ActionLink("Back to List", "Orders")
        
            </div>
            </div>

        </div>
        </div>
    </div>

