
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg overlay">
    <h3>Admin Login</h3>
</div>


<div class="container">
    <div class="row align-items-center">

        <div class="col-md-4">

            @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
            {

                <div class="login-form" style="position: relative; left: 100%; margin-left: -10px; ">
                    <form method="post">
                        <h1 class="text-center">&nbsp;</h1>
                        <div class="form-group">
                            <input id="username" name="username" type="text" class="form-control" placeholder="Username" required="required">
                        </div>
                        <div class="form-group">
                            <input id="password" name="password" type="password" class="form-control" placeholder="Password" required="required">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Log in</button>
                        </div>
                    </form>
                </div>
            }
            <h3>@ViewBag.LoginMessage</h3>
        </div>
    </div>
</div>

