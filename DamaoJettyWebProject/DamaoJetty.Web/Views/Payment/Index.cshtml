
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg overlay">
    <h3>Checkout</h3>
</div>

<div class="about_area">
    <div class="container">
        <div class="row align-items-center">


            <div class="col-md-8">


                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">
                            <img src="~/Content/img/PayByCard.png" /><br />
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <strong>Pay By Card</strong>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">
                            <img src="~/Content/img/PayByCash.png" />
                            <br />
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <strong>Pay By Cash</strong>
                        </a>
                    </li>
                    
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <form action="#">
                            <h4>Personal Details</h4>

                            <div class="mt-10">
                                <input type="text" class="form-control" placeholder="First name">
                            </div>
                            <div class="mt-10">
                                <input type="text" class="form-control" placeholder="Last name">
                            </div>

                            <div class="mt-10">
                                <input type="text" class="form-control" placeholder="Email Address">
                            </div>

                            <div class="mt-10">
                                <input type="text" class="form-control" placeholder="Contact Number">
                            </div>

                            <br />

                            <h4>Card Details</h4>
                            <div class="mt-10">
                                <input type="text" class="form-control" placeholder="Card Holder's Name">
                            </div>

                            <div class="mt-10">
                                <input type="text" class="form-control" placeholder="Card Number">
                            </div>

                            <div class="form-row mt-10">
                                <div class="col">
                                    <select id="ExpMonth" class="form-control">
                                        <option value="0">Exp. Month</option>
                                        <option value="1">01</option>
                                        <option value="2">02</option>
                                        <option value="3">03</option>
                                        <option value="4">04</option>
                                        <option value="5">05</option>
                                        <option value="6">06</option>
                                        <option value="7">07</option>
                                        <option value="8">08</option>
                                        <option value="9">09</option>
                                        <option value="10">10</option>
                                        <option value="11">11</option>
                                        <option value="12">12</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <select id="ExpYear" class="form-control">
                                        <option value="0">Exp. Year</option>
                                        <option value="2020">2020</option>
                                        <option value="2021">2021</option>
                                        <option value="2022">2022</option>
                                        <option value="2023">2023</option>
                                        <option value="2024">2024</option>
                                        <option value="2025">2025</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mt-10">
                                <input type="text" class="form-control" placeholder="CVC Number">
                            </div>

                           

                        </form> 
                    </div>






                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                    <h1>Thank you for your order. Please click <a href="#" class="genric-btn success e-large"><strong>Confirm Order</strong></a> to process your order. Make a payment on collection of your order at our restaurant.</h1>
                    </div>
                    
                </div>
            </div>

            <div class="col-md-4" style="position: -webkit-sticky; position: sticky; top:50px;">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h1 class="card-title">Total</h1>
                        <h6 class="card-subtitle mb-2 text-muted">Amout to be Paid!</h6>
                        <p class="card-text">Thank you for your order.</p>
                        <h3>£ @ViewBag.TotalSum</h3>
                        <div class="mt-10">
                            <span> <a href="#" class="genric-btn success e-large"><strong>PLACE ORDER</strong></a></span>
                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
</div>