@model List<DamaoJetty.Web.Models.FoodItem>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="best_burgers_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section_title text-center mb-80">
                    <span>Our Top Specialities</span>
                    <h3>Best Food Ever</h3>
                </div>
            </div>
        </div>
        <div class="row">



            @{
                foreach (var foodItem in Model.Where(x => x.IsTopFood == true))
                {
                    <div class="col-xl-6 col-md-6 col-lg-6">
                        <div class="single_delicious d-flex align-items-center">
                            <div class="thumb">
                                <img src="@foodItem.FoodImg.ToString()" alt="@foodItem.FoodTitle">
                            </div>
                            <div class="info">
                                <h3>@foodItem.FoodTitle</h3>
                                <p>@foodItem.Description</p>
                                <span>
                                    £ @foodItem.Price.ToString("0.00")
                                    
                                    <a  class="boxed-btn4 center-block" href="@Url.Action("AddToCart", "Home", new { id = foodItem.FoodItemId })">Order Now</a>
                                </span>
                                
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="iteam_links">                    
                    @Html.ActionLink("More Items", "Index", "Menu", null, new { @class = "active boxed-btn5" })
                </div>
            </div>
        </div>
    </div>
</div>
<!-- features_room_startt -->
<div class="Burger_President_area">
    <div class="Burger_President_here">
        <div class="single_Burger_President">
            <div class="room_thumb">
                <img src="~/Content/img/home footer pics/Bombay Sandwich.png" alt="">
                <div class="room_heading d-flex justify-content-between align-items-center">
                    <div class="room_heading_inner">
                        <h3>Bombay Grilled Sandwich</h3>
                        <span>£3</span>
                        @*<a href="#" class="boxed-btn3">Order Now</a>*@
                    </div>

                </div>
            </div>
        </div>
        <div class="single_Burger_President">
            <div class="room_thumb">
                <img src="~/Content/img/home footer pics/Chick Lolly.png" alt="">
                <div class="room_heading d-flex justify-content-between align-items-center">
                    <div class="room_heading_inner">
                        <h3>Chicken Lollypop</h3>
                        <span>£4</span>
                        @*<a href="#" class="boxed-btn3">Order Now</a>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- features_room_end -->
